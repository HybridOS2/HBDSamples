<!DOCTYPE hvml>
<hvml target="html">
    <head>
        <meta charset="utf-8" />
    </head>
    <body>
        <button id="id_btn" hvml-events="click">send channel</button>

        <observe on="#id_btn" for="click">
            <request on="/-/lockscreen/CHAN/chanLockscreen" to="post">
            {
                "type":"lockscreen",
                "name":"lock"
            }
            </request>
        </observe>


        <observe on $CRTN for "rdrState:pageClosed">
            <exit with 'Ok' />
        </observe>
    </body>
</hvml>
